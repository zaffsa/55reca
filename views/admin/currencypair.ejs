<head> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
    body {
    background-color: #000; 
    color: #fff;
    font-family: 'Helvetica Neue', Arial, sans-serif;
}

.form-control {
    background-color: #333;
    color: white !important;
    border: 1px solid #444;
    border-radius: 0.25rem;
}

.form-control:focus {
    background-color: #333;
    border-color: #ffdd00;
    box-shadow: 0 0 5px  #ffdd00;
    outline: none;
}

.btn-primary {
    background-color: #ffdd00;
    border-color: #ffdd00;
    color: #000;
    transition: background-color 0.3s ease;
}
/* Estilo para alterar a cor do placeholder */
.form-control::placeholder {
    color: white;
    opacity: 1; /* Opcional: para garantir que a cor seja totalmente opaca */
}

/* Estilos para navegadores específicos, caso necessário */
/* Firefox */
.form-control:-moz-placeholder {
    color: white;
    opacity: 1;
}

/* Internet Explorer */
.form-control:-ms-input-placeholder {
    color: white;
}

/* Microsoft Edge */
.form-control::-ms-input-placeholder {
    color: white;
}

/* Google Chrome, Safari */
.form-control::-webkit-input-placeholder {
    color: white;
}


.btn-primary:hover {
    background-color: #e6c800;
    border-color: #e6c800;
}

label {
    color: #fff;
}

.form-center {
            max-width: 500px; /* Ajuste conforme necessário */
            margin: auto;
        }

        .form-group {
            text-align: left; /* Para alinhar os rótulos à esquerda */
        }

        .container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }   
        /* Estilo para inputs */
    .form-control {
        color: white; /* Cor do texto dos inputs */
    }

    /* Estilo para o botão */
    .btn-primary {
        margin-top: 10px; /* Margem acima do botão */
    }

    /* Estilos para responsividade */
    @media (max-width: 768px) {
        /* Estilos para dispositivos mobile */
        .form-control, .btn-primary {
            width: 100%; /* Largura total em dispositivos móveis */
        }
    }

    @media (min-width: 769px) {
        /* Estilos para dispositivos desktop */
        .form-control, .btn-primary {
            width: auto; /* Largura automática em dispositivos desktop */
        }
    }
</style></head>
<body>
    <div class="container">
        <div class="form-center">
            <h3>Adicionar Par de Moedas</h3>
            <form action="/trade/tower/add-currency-pair" method="post">
    <div class="form-group">
        <label for="name">Nome do Par</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <% if (typeof priceWithBuyFee !== 'undefined' && typeof priceWithSellFee !== 'undefined') { %>
        <div class="form-group">
            <label for="buyRate">Preço de Compra</label>
            <input type="number" class="form-control" id="buyRate" name="buyRate" step="0.000001" readonly placeholder="<%= priceWithBuyFee %>">
        </div>
        <%= console.log(priceWithBuyFee)%>
        <div class="form-group">
            <label for="sellRate">Preço de Venda</label>
            <input type="number" class="form-control" id="sellRate" name="sellRate" step="0.000001" readonly placeholder="<%= priceWithSellFee %>">
        </div>
    <% } else { %>
        <p></p>
    <% } %>
    <div class="form-group">
        <label for="liquidity">Liquidez</label>
        <input type="number" class="form-control" id="liquidity" name="liquidity" step="0.01" required>
    </div>
    <div class="form-group">
        <label for="fee">Taxa de Comissão</label>
        <input type="number" class="form-control" id="fee" name="fee" step="0.01" required>
    </div>
    <div class="form-group">
        <label for="minLimit">Limite Mínimo</label>
        <input type="number" class="form-control" id="minLimit" name="minLimit" step="0.000001">
    </div>
    <div class="form-group">
        <label for="maxLimit">Limite Máximo</label>
        <input type="number" class="form-control" id="maxLimit" name="maxLimit" step="0.000001">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</form>
</div>
</div>
<!-- ... scripts ... -->
</body>
</html>                 